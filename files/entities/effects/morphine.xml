<Entity>
	<InheritTransformComponent />
	
	<GameEffectComponent
		effect="CUSTOM"
		custom_effect_id="MORPHINE"
		frames="99999"
		>
	</GameEffectComponent>
	
	<VariableStorageComponent
        name="trueHealth"
        value_float="4"
        >
    </VariableStorageComponent>
	
	<DrugEffectModifierComponent>
		<fx_add
			distortion_amount="0.2"
			color_amount="0.05"
			fractals_amount="0.1"
		/>
	</DrugEffectModifierComponent>

	
	<LuaComponent
    script_source_file="mods/Hydroxide/files/scripts/effects/morphine/start.lua"
    execute_every_n_frame="1"
    remove_after_executed="1"
	></LuaComponent>--trueHealth = hp
	
	<LuaComponent
	script_source_file="mods/Hydroxide/files/scripts/effects/morphine/morphine.lua"
	execute_every_n_frame="5"
	></LuaComponent>--trueHealth = trueHealth - (maxhp - hp); hp = maxhp; if trueHealth = 0 then die
	
	<LuaComponent
    script_source_file="mods/Hydroxide/files/scripts/effects/morphine/end.lua"
	execute_every_n_frame="-1"
    execute_on_removed="1"
    ></LuaComponent>--hp = trueHealth
	
</Entity>